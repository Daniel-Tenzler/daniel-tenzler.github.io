---
import MainLayout from '../../layouts/MainLayout.astro';
import { getPortfolioItems } from '../../data/portfolio';
import PortfolioGrid from '../../components/jsx/portfolio/PortfolioGrid';
import GridBackground from '../../components/jsx/gridBackground/GridBackground';

const portfolioItems = await getPortfolioItems();
---

<MainLayout title="Portfolio | Daniel Tenzler">
	<GridBackground client:load />
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">My Portfolio</h1>
    <PortfolioGrid client:load items={portfolioItems} />
  </main>
</MainLayout> 