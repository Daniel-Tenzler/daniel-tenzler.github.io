---
import MainLayout from 'src/layouts/MainLayout.astro';
import GridBackground from 'src/components/jsx/gridBackground/GridBackground/GridBackground';
import ContentContainer from 'src/components/jsx/blog/ContentContainer/ContentContainer';
import NotFoundPage from 'src/components/jsx/pages/NotFoundPage/NotFoundPage';
---

<MainLayout
	title="404 - Page Not Found | Daniel Tenzler"
	description="The page you're looking for doesn't exist. Return to Daniel Tenzler's website to explore blog posts, portfolio, and more."
>
	<meta name="robots" content="noindex, follow" slot="head" />

	<ContentContainer>
		<GridBackground client:load />
		<NotFoundPage client:load />
	</ContentContainer>
</MainLayout>
