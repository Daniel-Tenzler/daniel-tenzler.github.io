                "bootup-time": ["warn", { "minScore": 0 }],
                "dom-size": ["warn", { "minScore": 0 }],
                "mainthread-work-breakdown": ["warn", { "minScore": 0 }],
                "server-response-time": ["warn", { "minScore": 0 }],
                "uses-long-cache-ttl": ["warn", { "maxLength": 0 }]
            }
        }
    }
}